<% if (title) { %>
    <h1>
      <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
  
      <%- messages() %>
  
        <% if (errors) { %>
          <ul class="notice">
            <% errors.array().forEach(error=> { %>
              <li>
                <%= error.msg %>
              </li>
              <% }) %>
          </ul>
          <% } %>
  
          <div class="login">
            <h1>Login</h1>
            <form>
                <label for="email">Email*</label>
                <input type="email" id="email" required>
                <label for="password">Password*</label>
                <input type="password" id="password" required>
                <button type="submit" class="login_submit">Log In</button>
                <a href="/reset-password" class="forgot-password-link">Forgot Password?</a>
            </form>
            <p class="login_pass_note">Password must include at least one letter, one number, and be at least 8 characters long.</p>
            <p>No account?  <span class="no-acct-signup"><a class="register-link" href="/account/register">Sign up!</a></span></p>
                </div>

        </div>
        